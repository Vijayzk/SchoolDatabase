<%- include('./partials/header.ejs')%>
<div class="conatiner">
    <div class="row mx-2">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-centre">Add New Teacher</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input type="text" class="form-control" id="age" name="age">
                </div>
                <div class="mb-3">
                    <label for="fees" class="form-label">Salary</label>
                    <input type="text" class="form-control" id="salary" name="salary">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-danger text-centre">List of Teacher</h2>
            <%#Show All Data%>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% var i =1 %>
                    <% data.forEach((item)=>{%>
                        <tr>
                            <td><%= i++%></td>
                            <td><%= item.name%></td>
                            <td><%= item.age%></td>
                            <td><%= item.salary%></td>
                            <td class="">
                                <form action="/teacher/edit1/<%= item._id%>" method="get" class="d-inline">
                                    <button type="submit" class="btn ">
                                        <i class="fas fa-pen-square text-info mx-2"></i>
                                    </button>
                                </form>
                                <form action="/teacher/delete/<%= item._id%>" method="post" class="d-inline">
                                    <button type="submit" class="btn">
                                        <i class="fas fa-trash text-danger mx-2"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <%})%>
                </tbody>
            </table>
        </div>
    </div>
  </div>
<%- include('./partials/footer.ejs')%>
