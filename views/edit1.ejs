<%- include('./partials/header.ejs')%>
 
  <div class="conatiner">
    <div class="row mx-2">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-centre">Update Teacher</h2>
            <form method="post" action="/teacher/update/<%= data._id%>">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%=data.name%>">
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input type="text" class="form-control" id="age" name="age" value="<%=data.age%>">
               </div>
                <div class="mb-3">
                    <label for="salary" class="form-label">Salary</label>
                    <input type="text" class="form-control" id="salary" name="salary" value="<%=data.salary%>">
                </div>
                <button type="submit" class="btn btn-warning">Update</button>
                <button type="submit" class="btn btn-secondary">Back to Home</button>
            </form>
        </div>
    </div>
  </div>

